<h1>New Post</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines For Posts</p>
    <ul>
      <li>Guildeline #1</li>
      <li>Guildeline #2</li>
      <li>Guildeline #3</li>
    </ul>
  </div>
</div>
<div class="col-md-8">
  <%= form_for [@topic, @post] do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter a post title" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter a post body" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
  </div>
</div>
